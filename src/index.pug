block header
  +page-header('home')
    .page-header__top
      .page-header__panel
        +logo('/')
          img(src='./img/logo-white.png', width='48', height='72', alt='It Park &mdash; Казань')
        +nav-semi()
      .page-header__burger
        +burger()
    +hero-menu()
    +hero-slider()


block content
  +news()
  +assistant()
  +events()
  +video-about()
  +partners()

block footer
  +page-footer()
    .page-footer__panel
      .page-footer__panel-inner
          .page-footer__nav
            a.page-footer__nav-item(href='#') Для граждан
            a.page-footer__nav-item(href='#') Для бизнеса
            a.page-footer__nav-item(href='#') Для стартапов
            a.page-footer__nav-item(href='#') Для госсектора
            a.page-footer__nav-item(href='#') Все разделы
          .page-footer__dropdown
            .field-select.page-footer__select
              select#selectCity.field-select__select(name="city")
                option(value="") Казань
                option(value="") Наб. Челны
            .field-select.page-footer__select
              select#selectLang.field-select__select(name="city")
                option(value="") РУС
                option(value="") ENG

