//- Все примеси в этом файле должны начинаться c имени блока (home)

mixin home(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +home('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' home--' + modsList[i].trim();
      }
    }

  .home(class=allMods)&attributes(attributes)
    .home__inner!= text