//- Все примеси в этом файле должны начинаться c имени блока (elevation)

mixin elevation(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +elevation('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' elevation--' + modsList[i].trim();
      }
    }

  .elevation(class=allMods)&attributes(attributes)
    .elevation__inner!= text