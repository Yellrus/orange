//- Все примеси в этом файле должны начинаться c имени блока (partners)

mixin partners(mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +partners('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' partners--' + modsList[i].trim();
      }
    }

  section.partners(class=allMods)&attributes(attributes)
    .partners__inner.wrap
      .partners__head
        +heading('Ассоциация', 'size_sm')
        +heading('Партнёры', 'size_sm')
      .partners__items#partners
        - for (i = 0; i <= 10; i++)
          .partners__wrap-item
            a.partners__item(href='#')
              img(src="img/tatarstan.png", alt="")
