//- Все примеси в этом файле должны начинаться c имени блока (wrap)

mixin wrap(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +wrap('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' wrap--' + modsList[i].trim();
      }
    }

  .wrap(class=allMods)&attributes(attributes)
    .wrap__inner!= text