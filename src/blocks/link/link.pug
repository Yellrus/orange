//- Все примеси в этом файле должны начинаться c имени блока (link)

mixin link(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +link('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' link--' + modsList[i].trim();
      }
    }

  .link(class=allMods)&attributes(attributes)
    .link__inner!= text